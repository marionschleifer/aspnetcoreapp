@model IEnumerable<NotesApp.Models.Note>
@{
  ViewBag.Title = "Notes";
}
<h2>Notes</h2>
<p>
  <a asp-controller="Note" asp-action="Create">Add New</a>
</p>
<table class="table">
  <tr>
    <th>@Html.DisplayNameFor(model => model.Importance)</th>
    <th>@Html.DisplayNameFor(model => model.Content)</th>
    <th>Actions</th>
  </tr>
  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Importance)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Content)
      </td>
      <td>
        <!--<a asp-controller="Notes" asp-action="Delete" asp-route-id="@item.Key">Delete</a>-->
        <a asp-action="Edit" asp-route-id="@item.Key">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.Key">Delete</a> |
        <a asp-action="GetById" asp-route-id="@item.Key">Show</a>
      </td>
    </tr>
  }
</table>