@model IEnumerable<Notes>
@{
  ViewBag.Title = "Notes";
}
<h2>Notes</h2>
<p>
  <a asp-controller="Note" asp-action="Create">Add New</a>
</p>
<table class="table">
  <tr>
    <th>Importance</th>
    <th>Content</th>
  </tr>
  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Importance)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Content)
      </td>
      <td>
        <a asp-controller="Notes" asp-action="Delete"
          asp-route-id="@item.id">Delete</a>
      </td>
    </tr>
  }
</table>